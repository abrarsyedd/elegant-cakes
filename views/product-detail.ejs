<%- include('header') %>

<div class="container" style="padding: 3rem 1rem;">
    <!-- Product Details -->
    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 3rem; margin-bottom: 4rem;">
        <!-- Product Image -->
        <div>
            <img src="<%= product.image_url %>" alt="<%= product.name %>" style="width: 100%; border-radius: 8px; object-fit: cover; max-height: 500px;">
        </div>

        <!-- Product Info -->
        <div>
            <div style="margin-bottom: 1.5rem;">
                <p style="color: #d4af37; font-weight: 600; font-size: 0.9rem; margin: 0;">
                    <%= product.category %>
                </p>
                <h1 style="color: #2c2c2c; margin: 0.5rem 0 1rem 0; font-size: 2.5rem;">
                    <%= product.name %>
                </h1>
            </div>

            <p style="color: #666; font-size: 1.1rem; line-height: 1.6; margin-bottom: 2rem;">
                <%= product.description %>
            </p>

            <div style="display: flex; align-items: center; gap: 1.5rem; margin-bottom: 2rem;">
                <span style="font-size: 2rem; font-weight: 700; color: #d4af37;">
                    $<%= product.price.toFixed(2) %>
                </span>
                <span style="color: #666; font-size: 1rem;">
                    Stock: <%= product.stock %>
                </span>
            </div>

            <button class="btn btn-primary" onclick="addToCart('<%= product.id %>')" 
                    style="padding: 1rem 2.5rem; font-size: 1.1rem; width: 100%; background: #d4af37; color: #2c2c2c; border: none; border-radius: 4px; font-weight: 700; cursor: pointer;">
                Add to Cart
            </button>

            <a href="/cakes" class="btn btn-outline" 
               style="display: block; margin-top: 1rem; padding: 1rem 2.5rem; text-align: center; border: 2px solid #d4af37; color: #d4af37; background: white; border-radius: 4px; font-weight: 700; text-decoration: none;">
                Back to Cakes
            </a>
        </div>
    </div>

    <!-- Related Products -->
    <% if (relatedProducts && relatedProducts.length > 0) { %>
        <div style="margin-top: 4rem;">
            <h2 class="section-title">You May Also Like</h2>
            <div class="product-grid">
                <% relatedProducts.forEach(function(relatedProduct) { %>
                    <div class="product-card" onclick="window.location.href='/product/<%= relatedProduct.id %>'">
                        <img src="<%= relatedProduct.image_url %>" alt="<%= relatedProduct.name %>" class="product-image" />
                        <div class="product-info">
                            <div class="product-category"><%= relatedProduct.category %></div>
                            <h3 class="product-name"><%= relatedProduct.name %></h3>
                            <p class="product-description"><%= relatedProduct.description %></p>
                            <div class="product-footer">
                                <span class="product-price">$<%= relatedProduct.price.toFixed(2) %></span>
                                <button class="btn btn-primary" onclick="event.stopPropagation(); addToCart('<%= relatedProduct.id %>')">
                                    Add to Cart
                                </button>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    <% } else { %>
        <p style="text-align: center; color: #888; font-size: 1.1rem; margin-top: 2rem;">No related products available.</p>
    <% } %>
</div>

<%- include('footer') %>

<style>
    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 2rem;
        margin-top: 2rem;
    }

    .product-card {
        background: white;
        border: 1px solid #eee;
        border-radius: 8px;
        overflow: hidden;
        cursor: pointer;
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0,0,0,0.1);
    }

    .product-image {
        width: 100%;
        height: 250px;
        object-fit: cover;
    }

    .product-info {
        padding: 1.5rem;
    }

    .product-category {
        color: #d4af37;
        font-weight: 600;
        font-size: 0.85rem;
        margin-bottom: 0.5rem;
    }

    .product-name {
        color: #2c2c2c;
        font-size: 1.2rem;
        margin: 0.5rem 0;
    }

    .product-description {
        color: #666;
        font-size: 0.95rem;
        margin: 0.75rem 0;
        line-height: 1.4;
    }

    .product-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 1rem;
    }

    .product-price {
        color: #d4af37;
        font-weight: 700;
        font-size: 1.1rem;
    }

    .btn-primary {
        background: #d4af37;
        color: #2c2c2c;
        border: none;
        padding: 0.6rem 1.2rem;
        border-radius: 4px;
        font-weight: 600;
        cursor: pointer;
        font-size: 0.9rem;
    }

    .btn-primary:hover {
        background: #c9a227;
    }

    .section-title {
        font-size: 2rem;
        color: #2c2c2c;
        margin-bottom: 1rem;
        text-align: center;
    }
</style>
